<body>
  <div class="container">
    <div class="col-md-6">
      <h1>Edit Photo <%= @photo.id %></h1>
      <form action="/update_photo/<%= @photo.id %>">
        <div>
          <label for"url">
            Image URL
          </label>
          <input name="the_caption" value="<%= @photo.caption %>" type-"text" id="url">
        </div>
        <div>
          <label for="caption">
            Caption
          </label>
          <input name="the_source" type-"text" id="caption" value="<%= @photo.source %>">
        </div>
        <button> Update Photo </button>
      </form>
    </div>
  </div>
</body>
